.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to t("brand"), root_path, class: "brand"
      .container.nav-collapse
        %ul.nav
          %li= link_to t("menu.home"), root_path
          %li= link_to t("menu.blog"), blogs_path
          - if current_user and current_user.admin
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                = I18n.t("menu.admin")
                %span.caret
              %ul.dropdown-menu
                %li= link_to t("menu.admin_blog"), new_admin_blog_path
                %li= link_to t("menu.admin_setting"), admin_versions_path

        %ul.nav.pull-right
          %li.dropdown#dropdown_menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#dropdown_menu"}
              = I18n.t("account.my_account")
              %span.caret
            %ul.dropdown-menu
              %li= link_to I18n.t("account.twitter"), "/auth/twitter"
              - if current_user
                %li= link_to I18n.t("account.logout"), logout_path
