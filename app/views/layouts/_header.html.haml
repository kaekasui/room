.navbar.navbar-fixed-top
  .navbar-inner
    %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .container
      = link_to t("brand"), root_path, class: "brand"
      .container.nav-collapse
        %ul.nav
          %li.menu= link_to t("menu.home"), root_path
          %li.menu= link_to t("menu.blog"), blogs_path
          - if current_user and current_user.admin
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                = I18n.t("menu.admin")
                %span.caret
              %ul.dropdown-menu
                %li= link_to t("menu.admin_blog"), new_admin_blog_path
                %li= link_to t("menu.admin_ticket"), admin_tickets_path
                %li= link_to t("menu.admin_setting"), admin_versions_path

        %ul.nav.pull-right
          - if current_user
            %li.dropdown#dropdown_menu
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#dropdown_menu"}
                = I18n.t("account.my_account")
                %span.caret
              %ul.dropdown-menu
                %li= link_to t("helpers.links.logout"), destroy_user_session_path, method: :delete, class: "navbar-link"
                %li=# link_to I18n.t("account.twitter"), "/auth/twitter"
