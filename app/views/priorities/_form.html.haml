= form_for @priority, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :position, :class => 'control-label'
    .controls
      = f.text_field :position, :class => 'text_field'
  .control-group
    = f.label :deleted_at, :class => 'control-label'
    .controls
      = f.text_field :deleted_at, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), priorities_path, :class => 'btn'
