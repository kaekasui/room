.well
  %table.table.nonborder
    = render partial: "exordium", locals: {blog: @blog}
    %tr
      %td.contents2{colspan: 2}= to_skip(@blog.contents2).html_safe
    %tr
      %td.text-align-right{:colspan => 2}= link_to "Comments(" + @blog.blog_comments.count.to_s + ")", blog_path(id: @blog.id, anchor: "blog_comments")

.well
  .blog_comment_messages
  = form_for @blog_comment, html: { class: "form-horizontal", role: "form" }, url: blog_blog_comments_path(blog_id: @blog.id), remote: true do |f|
    = render partial: "blog_comments/form", locals: {f: f}

  %hr

  #blog_comments
    = render partial: @blog_comments, spacer_template: "blog_comments/separator"

- content_for :sidebar do
  = render "blogs/sidebar"
