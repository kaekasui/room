= form_for @blog do |f|
  - if @blog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog.errors.count, "error")} prohibited this blog from being saved:"
      %ul
        - @blog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :blog_category_code
    = f.text_field :blog_category_code
  .field
    = f.label :contents1
    = f.text_area :contents1
  .field
    = f.label :contents2
    = f.text_area :contents2
  .field
    = f.label :draft
    = f.check_box :draft
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
