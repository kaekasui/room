- model_class = Function
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:deleted_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @functions.each do |function|
      %tr
        %td= link_to function.id, function_path(function)
        %td= function.name
        %td= function.position
        %td= function.deleted_at
        %td=l function.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_function_path(function), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), function_path(function), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_function_path, :class => 'btn btn-primary'
