- model_class = Function
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @function.name
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @function.position
%p
  %strong= model_class.human_attribute_name(:deleted_at) + ':'
  %br
  = @function.deleted_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), functions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_function_path(@function), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), function_path(@function), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
