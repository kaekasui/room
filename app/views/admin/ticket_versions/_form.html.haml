= form_for ['admin', @version], url: {controller: 'admin/ticket_versions'}, html: {class: "form-horizontal"} do |f|
  .form-group
    = f.label :project_id, class: "control-label"
    = asterisk(@version, :project_id)
    = f.select :project_id, Project.all.map { |p| [p.title, p.id] }, {}, { class: "form-control" }
  .form-group
    = f.label :release_at, class: "control-label"
    = asterisk(@version, :release_at)
    .form-controls-datetime= f.date_select :release_at, datetime_separator: "　　", include_seconds: true, use_month_numbers: true
  .form-group
    = f.label :name, class: "control-label"
    = asterisk(@version, :name)
    = f.text_field :name, class: "form-control"
  .form-group
    = f.submit class: "btn btn-default"
