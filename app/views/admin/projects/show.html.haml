- model_class = Project

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @project.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @project.content

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_projects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_project_path(@project), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_project_path(@project), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
