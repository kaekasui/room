- model_class = Status
= form_tag action: :update_all do
  %table.table.nonborder
    - @statuses.each do |status|
      %tr
        = fields_for "status[]", status do |f|
          %td= f.check_box :finished
          %td= f.text_field :name, class: "form-control"
          %td
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_status_path(status), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-default'

  .add_status.btn.btn-default= I18n.t("actions.add")
  = submit_tag I18n.t("actions.update"), class: "btn btn-default"
