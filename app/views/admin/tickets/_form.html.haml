= form_for ['admin', @ticket], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.text_field :code, :class => 'text_field'
  .control-group
    = f.label :project_id, :class => 'control-label'
    .controls
      = f.select :project_id, Project.all.map {|p| [p.title, p.id]}
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :content, :class => 'control-label'
    .controls
      = f.text_area :content, class: "span5", rows: "4"
  .control-group
    = f.label :progress, :class => 'control-label'
    .controls
      = f.text_field :progress, :class => 'text_field'
  .control-group
    = f.label :status_id, :class => 'control-label'
    .controls
      = f.select :status_id, Status.all.map {|t| [t.name, t.id]}
  .control-group
    = f.label :priority_id, :class => 'control-label'
    .controls
      = f.select :priority_id, Priority.all.map {|p| [p.name, p.id]}
  .control-group
    = f.label :version_id, :class => 'control-label'
    .controls
      = f.select :version_id, Version.all.map {|v| [v.name, v.id]}
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.text_field :user_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), admin_tickets_path, :class => 'btn'
