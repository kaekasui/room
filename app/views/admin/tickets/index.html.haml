- model_class = Ticket
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:priority_id)
      %th= model_class.human_attribute_name(:status_id)
      %th= model_class.human_attribute_name(:version_id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:progress)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= link_to ticket.code, admin_ticket_path(ticket)
        %td= ticket.priority_id
        %td= ticket.status_id
        %td= ticket.version_id
        %td= link_to ticket.title, admin_ticket_path(ticket)
        %td= ticket.progress
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_ticket_path(ticket), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_ticket_path(ticket), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_admin_ticket_path, :class => 'btn btn-primary'
