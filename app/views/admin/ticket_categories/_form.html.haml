= form_for ['admin', @ticket_category], html: {class: "form-horizontal"} do |f|
  .form-group
    = f.label :project_id, class: "control-label col-sm-2"
    = asterisk(@ticket_category, :project_id)
    .col-sm-10
      = f.select :project_id, Project.all.map { |p| [p.title, p.id] }, {}, { class: "form-control" }
  .form-group
    = f.label :name, class: "control-label col-sm-2"
    = asterisk(@ticket_category, :name)
    .col-sm-10
      = f.text_field :name, class: "form-control"
  .form-group
    = f.submit class: "btn btn-default"
