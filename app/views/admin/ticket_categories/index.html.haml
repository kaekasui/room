- model_class = Category
= form_tag action: :update_all do
  %table.table.table-striped
    - @ticket_categories.each do |category|
      %tr
        = fields_for "ticket_category[]", category do |f|
          %td= f.select :project_id, Project.all.map {|p| [p.title, p.id] }
          %td= f.text_field :name
          %td
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_ticket_category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

  = submit_tag I18n.t("actions.update"), class: "btn"

= link_to t('.new', :default => t("helpers.links.new")), new_admin_ticket_category_path, :class => 'btn btn-primary'
