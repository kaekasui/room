- model_class = Priority
= form_tag action: :update_all do
  %table.table.nonborder
    - @priorities.each do |priority|
      %tr
        = fields_for "priority[]", priority do |f|
          %td= f.text_field :name, class: "form-control"
          %td
            = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_priority_path(priority), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-default'

  .add_priority.btn.btn-default= I18n.t("actions.add")
  = submit_tag I18n.t("actions.update"), class: "btn btn-default"
