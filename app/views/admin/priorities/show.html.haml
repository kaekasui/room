- model_class = Priority
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @priority.name
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @priority.position
%p
  %strong= model_class.human_attribute_name(:deleted_at) + ':'
  %br
  = @priority.deleted_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_priorities_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_priority_path(@priority), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_priority_path(@priority), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
