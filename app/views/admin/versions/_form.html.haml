= form_for ['admin', @version], html: {class: "form-horizontal"} do |f|
  .control-group
    = f.label :release_at, class: "control-label"
    = asterisk(@version, :release_at)
    .controls
      = f.date_select :release_at, datetime_separator: "　　", include_seconds: true, use_month_numbers: true
  .control-group
    = f.label :name, class: "control-label"
    = asterisk(@version, :name)
    .controls
      = f.text_field :name
  .control-group
    .controls
      = f.submit class: "btn"
