= form_for @blog_link do |f|
  - if @blog_link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@blog_link.errors.count, "error")} prohibited this blog_link from being saved:"
      %ul
        - @blog_link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :introduction
    = f.text_field :introduction
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :draft
    = f.check_box :draft
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
