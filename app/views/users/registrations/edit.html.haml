.panel.panel-default
  .panel-heading= I18n.t("account.edit_password")
  .panel-body
    - flash[:error] = devise_error_messages!

    = form_for(resource, html: { role: "form" }, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      .form-group
        = f.label :email, class: "control-label"
        = f.text_field :email, readonly: true, class: "form-control"
      - if resource.encrypted_password.present?
        .form-group
          = f.label :current_password, class: "control-label"
          = f.password_field :current_password, class: "form-control"
      .form-group
        = f.label :password, I18n.t("account.new_password"), class: "control-label"
        = f.password_field :password, autocomplete: "off", class: "form-control"
      .form-group
        = f.label :password_confirmation, I18n.t("account.new_password_confirmation"), class: "control-label"
        = f.password_field :password_confirmation, class: "form-control"
      .form-group
        = f.submit class: "btn btn-default"
    %hr
      / %button.btn.btn-default(type="button")
      /  =# link_to I18n.t("account.delete"), registration_path(resource_name), data: { confirm: "are you sure?" }, method: :delete
