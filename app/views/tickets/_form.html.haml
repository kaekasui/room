= form_for @ticket, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :code, :class => 'control-label'
    .controls
      = f.text_field :code, :class => 'text_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :content, :class => 'control-label'
    .controls
      = f.text_field :content, :class => 'text_field'
  .control-group
    = f.label :progress, :class => 'control-label'
    .controls
      = f.text_field :progress, :class => 'text_field'
  .control-group
    = f.label :status_id, :class => 'control-label'
    .controls
      = f.text_field :status_id, :class => 'text_field'
  .control-group
    = f.label :priority_id, :class => 'control-label'
    .controls
      = f.text_field :priority_id, :class => 'text_field'
  .control-group
    = f.label :version_id, :class => 'control-label'
    .controls
      = f.text_field :version_id, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.text_field :user_id, :class => 'text_field'
  .control-group
    = f.label :created_by, :class => 'control-label'
    .controls
      = f.text_field :created_by, :class => 'text_field'
  .control-group
    = f.label :deleted_at, :class => 'control-label'
    .controls
      = f.text_field :deleted_at, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tickets_path, :class => 'btn'
