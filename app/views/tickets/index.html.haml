- model_class = Ticket
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:code)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:content)
      %th= model_class.human_attribute_name(:progress)
      %th= model_class.human_attribute_name(:status_id)
      %th= model_class.human_attribute_name(:priority_id)
      %th= model_class.human_attribute_name(:version_id)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_by)
      %th= model_class.human_attribute_name(:deleted_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tickets.each do |ticket|
      %tr
        %td= link_to ticket.id, ticket_path(ticket)
        %td= ticket.code
        %td= ticket.title
        %td= ticket.content
        %td= ticket.progress
        %td= ticket.status_id
        %td= ticket.priority_id
        %td= ticket.version_id
        %td= ticket.user_id
        %td= ticket.created_by
        %td= ticket.deleted_at
        %td=l ticket.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_ticket_path(ticket), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), ticket_path(ticket), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_ticket_path, :class => 'btn btn-primary'
